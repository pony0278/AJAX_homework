
@{
    ViewData["Title"] = "Homework4";
}

<h1>Homework4</h1>
<div class="container">
    <div class="row">
       <select class="form-select" aria-label="Default select example">
       <option selected>請選擇城市</option>
       </select>
    </div>
    <span class="txt"></span>
</div>

@section Scripts{
<script>
    $(document).ready(function() {
        const selectContainer = $('.form-select'); 
        const span = $('.txt');
        const cities = ["台北市","新北市","桃園市","台中市", "台南市","高雄市"];

        cities.forEach((item, i) => {
            const option = `<option value="${item}">${item}</option>`; 
            selectContainer.append(option);
        });

        $('select.form-select').on('change', function() {
            span.text($(this).val()); 
        });
    });
</script>
}